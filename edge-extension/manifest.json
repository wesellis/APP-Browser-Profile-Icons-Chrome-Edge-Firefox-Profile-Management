{
  "manifest_version": 3,
  "name": "Browser Profile Icon Manager for Edge",
  "version": "3.0.0",
  "description": "Manage Microsoft Edge profiles with custom icons, colors, and quick switching",
  "author": "Wesley Ellis",
  "homepage_url": "https://github.com/wesellis/browser-profile-icons",

  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "notifications"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },

  "options_page": "options.html",

  "commands": {
    "switch-profile-1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Switch to Profile 1"
    },
    "switch-profile-2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Switch to Profile 2"
    },
    "switch-profile-3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Switch to Profile 3"
    },
    "quick-switch": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Quick profile switcher"
    }
  }
}
